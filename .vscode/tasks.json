{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-O0",
                "-std=c++17",
                "-I${workspaceFolder}/ac-library",
                "${file}"
            ]
        },
        {
            "type": "shell",
            "label": "g++ build and run",
            "command": "${workspaceFolder}/a.out",
            "dependsOn": [
                "g++ build active file"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
