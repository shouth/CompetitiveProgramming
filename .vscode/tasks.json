{
    "tasks": [
        {
            "type": "shell",
            "label": "create output directory",
            "command": "mkdir",
            "args": [
                "-p",
                "build/${relativeFileDirname}"
            ]
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "dependsOn": "create output directory",
            "command": "clang++",
            "args": [
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "-std=c++17",
                "-Iac-library",
                "${relativeFile}",
                "-o",
                "build/${relativeFileDirname}/${fileBasenameNoExtension}"
            ]
        },
        {
            "type": "shell",
            "label": "g++ build and run",
            "command": "build/${relativeFileDirname}/${fileBasenameNoExtension}",
            "dependsOn": [
                "g++ build active file"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
